@page
@model RestaurantWebsite.Pages.ContactModel
@{
    ViewData["Title"] = "Contact us";
    Layout = "~/Pages/_Layout.cshtml";
}


<link rel="stylesheet" href="~/CSS/menu.css">

<div id="container">
    <h2>Contact us</h2>
    <hr />
    <div class="number-restaurant-container">
        <div class="number">
            <p>
                For any enquires email us at
                <br />
                restaurant@email.com
                <br />
                <br />
                Or call us at
                <br />
                +447700000000
                <br />
            </p>
        </div>
        <div class="restaurantform">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div>Username: <input />    </div>
                <div>Your email: <input /></div>
                <div class="message"><p>Message:</p> <input/></div>
                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
    <div class="containerspacercontact"></div>
    <div class="containersocials">
        <p>You can also contact us on our social media pages</p>
        <div class="containerfb">
            <a href="https://www.facebook.com/uochester" target="_blank">
                <img src="~/Images/facebook.png" />
                <p> - Facebook Link</p>
            </a>
        </div>
        <div class="containerig">
            <a href="https://www.instagram.com/uochester/" target="_blank">
                <img src="~/Images/instagram.png" />
                <p> - Instagram Link</p>
            </a>
        </div>
        <div class="containertt">
            <a href="https://twitter.com/uochester" target="_blank">
                <img src="~/Images/twitter.png" />
                <p> - Twitter Link</p>
            </a>
        </div>
    </div>
</div>